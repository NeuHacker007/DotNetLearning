@model IEnumerable<Eva.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div >@Html.ActionLink("New Movie","New","Movies", null, new { @class = "btn btn-primary" })</div>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Movies</th>
        <th>Genre</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name,"Details","Movies", new {id = movie.Id},null)</td>
            <td>@movie.Genre.Name</td>
            <td>@Html.ActionLink("Edit","Edit","Movies", new {id = movie.Id}, null)</td>
            <td>@Html.ActionLink("Remove","DeleteMovie","Movies", new {id = movie.Id}, null)</td>
        </tr>
    }
    </tbody>

</table>