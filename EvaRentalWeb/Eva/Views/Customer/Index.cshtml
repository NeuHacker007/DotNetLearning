@model IEnumerable<Eva.Models.Customer>
@{
    ViewBag.Title = "CustomerIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Customers</h2>
<div>@Html.ActionLink("New Customer", "New", "Customer", null, new { @class = "btn btn-primary" })</div>
@if (!Model.Any())
{
    <text>We don't have any customers! </text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>MembershipType</th>
                <th  colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Details", "Customer", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.Name</td>
                    <th>@Html.ActionLink("Edit", "Edit", "Customer", new { id = customer.Id },null)</th>
                    <th>@Html.ActionLink("Remove", "DeleteCustomer", "Customer", new { id = customer.Id }, null)</th>
                </tr>



            }
        </tbody>

    </table>
}


